@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"].Value;
}
<div class="row justify-content-center py-5">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm p-5 text-center">
            <div class="display-4 text-danger mb-3"><i class="bi bi-shield-lock"></i></div>
            <h1 class="h3 fw-semibold mb-3">@Localizer["Heading"]</h1>
            <p class="text-muted mb-4">@Localizer["Description"]</p>
            <a class="btn btn-primary" asp-controller="Orders" asp-action="Index">
                <i class="bi bi-arrow-left-circle me-2"></i>@Localizer["BackButton"]
            </a>
        </div>
    </div>
</div>
