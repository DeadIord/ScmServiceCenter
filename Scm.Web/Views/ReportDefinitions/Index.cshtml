@model IReadOnlyCollection<Scm.Web.Models.ReportBuilder.ReportDefinitionListItemViewModel>
@{
    ViewData["Title"] = "Конструктор отчётов";
}
<div class="d-flex justify-content-between align-items-center mb-4 px-5">
    <div>
        <h1 class="h3 mb-0">Конструктор SQL-отчётов</h1>
        <p class="text-muted mb-0">Создавайте и запускайте собственные выборки данных</p>
    </div>
    <a class="btn btn-primary" asp-action="Edit">Новый отчёт</a>
</div>

<div class="card shadow-sm rounded-3 px-5">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle table-sticky mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Описание</th>
                        <th>Доступность</th>
                        <th>Создан</th>
                        <th class="text-end">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 table-empty">Записей нет</td>
                    </tr>
                }
                else
                {
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@report.Title</td>
                            <td>@(string.IsNullOrWhiteSpace(report.Description) ? "—" : report.Description)</td>
                            <td>
                                @switch (report.Visibility)
                                {
                                    case Scm.Domain.Entities.ReportVisibility.Private:
                                        @:Только автор
                                        break;
                                    case Scm.Domain.Entities.ReportVisibility.Team:
                                        @:Команда (по ролям)
                                        break;
                                    case Scm.Domain.Entities.ReportVisibility.Organization:
                                        @:Вся организация
                                        break;
                                }
                            </td>
                            <td>@report.CreatedAtUtc.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Preview" asp-route-id="@report.Id">Предпросмотр</a>
                                    @if (report.CanEdit)
                                    {
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@report.Id">Редактировать</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
