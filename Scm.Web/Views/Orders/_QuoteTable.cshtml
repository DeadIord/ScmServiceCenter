@model Scm.Domain.Entities.Order
@using Scm.Domain.Entities
@{
    var lines = Model.QuoteLines;
    decimal approvedTotal = lines.Where(l => l.Status == QuoteLineStatus.Approved).Sum(l => l.Price * l.Qty);
    decimal proposedTotal = lines.Where(l => l.Status == QuoteLineStatus.Proposed).Sum(l => l.Price * l.Qty);
    int laborCount = lines.Count(l => l.Kind == QuoteLineKind.Labor);
    int partCount = lines.Count(l => l.Kind == QuoteLineKind.Part);
    string KindTitle(QuoteLineKind in_kind) => in_kind switch
    {
        QuoteLineKind.Labor => "Работа",
        QuoteLineKind.Part => "Запчасть",
        _ => in_kind.ToString()
    };
    string StatusTitle(QuoteLineStatus in_status) => in_status switch
    {
        QuoteLineStatus.Draft => "Черновик",
        QuoteLineStatus.Proposed => "Отправлено",
        QuoteLineStatus.Approved => "Согласовано",
        QuoteLineStatus.Rejected => "Отклонено",
        _ => in_status.ToString()
    };
    string StatusBadge(QuoteLineStatus in_status) => in_status switch
    {
        QuoteLineStatus.Draft => "secondary",
        QuoteLineStatus.Proposed => "warning",
        QuoteLineStatus.Approved => "success",
        QuoteLineStatus.Rejected => "danger",
        _ => "secondary"
    };
}
<div class="card shadow-sm rounded-3 mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
            <div>
                <h5 class="fw-semibold mb-1">Смета заказа</h5>
                <p class="section-subtitle mb-0">Фиксация работ, запчастей и статуса согласования</p>
            </div>
            <div class="quote-summary">
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">Работы</div>
                    <div class="fs-5 fw-semibold">@laborCount</div>
                </div>
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">Запчасти</div>
                    <div class="fs-5 fw-semibold">@partCount</div>
                </div>
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">На согласовании</div>
                    <div class="fs-5 fw-semibold">@proposedTotal.ToString("N2") ₽</div>
                </div>
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">Согласовано</div>
                    <div class="fs-5 fw-semibold" id="quote-total">@approvedTotal.ToString("N2") ₽</div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle table-sticky mb-0">
                <thead>
                    <tr>
                        <th>Наименование</th>
                        <th class="text-center">Тип</th>
                        <th class="text-end">Кол-во</th>
                        <th class="text-end">Цена</th>
                        <th class="text-end">Сумма</th>
                        <th class="text-end">Статус</th>
                    </tr>
                </thead>
                <tbody id="quote-lines">
                    @if (!lines.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 table-empty">Записей нет</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var line in lines.OrderBy(l => l.Kind).ThenBy(l => l.Title))
                        {
                            var badge = StatusBadge(line.Status);
                            <tr>
                                <td class="fw-semibold">@line.Title</td>
                                <td class="text-center">
                                    <span class="badge badge-light-alt">@KindTitle(line.Kind)</span>
                                </td>
                                <td class="text-end">@line.Qty.ToString("N2")</td>
                                <td class="text-end">@line.Price.ToString("N2")</td>
                                <td class="text-end">@(line.Price * line.Qty).ToString("N2")</td>
                                <td class="text-end"><span class="badge text-bg-@badge">@StatusTitle(line.Status)</span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <form id="add-line-form" class="row g-3 border-top pt-3 mt-3">
            <input type="hidden" name="OrderId" value="@Model.Id" />
            <div class="col-md-4">
                <label class="form-label">Наименование</label>
                <input class="form-control" name="Title" placeholder="Например, диагностика" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Тип</label>
                <select class="form-select" name="Kind">
                    <option value="Labor">Работа</option>
                    <option value="Part">Запчасть</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Кол-во</label>
                <input class="form-control" type="number" step="0.01" name="Qty" value="1" min="0.01" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Цена</label>
                <input class="form-control" type="number" step="0.01" name="Price" value="0" min="0" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-plus-circle me-2"></i>Добавить</button>
            </div>
        </form>
    </div>
</div>
