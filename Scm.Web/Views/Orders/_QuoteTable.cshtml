@model Scm.Domain.Entities.Order
@using Microsoft.AspNetCore.Mvc.Localization
@using Scm.Domain.Entities
@using System.Linq
@inject IViewLocalizer Localizer
@{
    var lines = Model.QuoteLines;
    decimal approvedTotal = lines.Where(line => line.Status == QuoteLineStatus.Approved).Sum(line => line.Price * line.Qty);
    decimal proposedTotal = lines.Where(line => line.Status == QuoteLineStatus.Proposed).Sum(line => line.Price * line.Qty);
    int laborCount = lines.Count(line => line.Kind == QuoteLineKind.Labor);
    int partCount = lines.Count(line => line.Kind == QuoteLineKind.Part);
    string KindTitle(QuoteLineKind in_kind)
    {
        string ret = Localizer[$"Kind_{in_kind}"];
        return ret;
    }
    string StatusTitle(QuoteLineStatus in_status)
    {
        string ret = Localizer[$"QuoteStatus_{in_status}"];
        return ret;
    }
    string StatusBadge(QuoteLineStatus in_status) => in_status switch
    {
        QuoteLineStatus.Draft => "secondary",
        QuoteLineStatus.Proposed => "warning",
        QuoteLineStatus.Approved => "success",
        QuoteLineStatus.Rejected => "danger",
        _ => "secondary"
    };
}
<div class="card shadow-sm rounded-3 mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
            <div>
                <h5 class="fw-semibold mb-1">@Localizer["QuoteTitle"]</h5>
                <p class="section-subtitle mb-0">@Localizer["QuoteSubtitle"]</p>
            </div>
            <div class="quote-summary">
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">@Localizer["LaborSummary"]</div>
                    <div class="fs-5 fw-semibold">@laborCount</div>
                </div>
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">@Localizer["PartsSummary"]</div>
                    <div class="fs-5 fw-semibold">@partCount</div>
                </div>
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">@Localizer["ProposedSummary"]</div>
                    <div class="fs-5 fw-semibold">@proposedTotal.ToString("N2") @Localizer["Currency"].Value</div>
                </div>
                <div class="quote-summary-item">
                    <div class="small text-uppercase text-muted">@Localizer["ApprovedSummary"]</div>
                    <div class="fs-5 fw-semibold" id="quote-total">@approvedTotal.ToString("N2") @Localizer["Currency"].Value</div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle table-sticky mb-0">
                <thead>
                    <tr>
                        <th>@Localizer["TitleColumn"]</th>
                        <th class="text-center">@Localizer["KindColumn"]</th>
                        <th class="text-end">@Localizer["QuantityColumn"]</th>
                        <th class="text-end">@Localizer["PriceColumn"]</th>
                        <th class="text-end">@Localizer["AmountColumn"]</th>
                        <th class="text-end">@Localizer["StatusColumn"]</th>
                    </tr>
                </thead>
                <tbody id="quote-lines">
                    @if (!lines.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 table-empty">@Localizer["NoLines"]</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var line in lines.OrderBy(line => line.Kind).ThenBy(line => line.Title))
                        {
                            var badge = StatusBadge(line.Status);
                            <tr>
                                <td class="fw-semibold">@line.Title</td>
                                <td class="text-center">
                                    <span class="badge badge-light-alt">@KindTitle(line.Kind)</span>
                                </td>
                                <td class="text-end">@line.Qty.ToString("N2")</td>
                                <td class="text-end">@line.Price.ToString("N2")</td>
                                <td class="text-end">@(line.Price * line.Qty).ToString("N2")</td>
                                <td class="text-end"><span class="badge text-bg-@badge">@StatusTitle(line.Status)</span></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <form id="add-line-form" class="row g-3 border-top pt-3 mt-3">
            <input type="hidden" name="OrderId" value="@Model.Id" />
            <div class="col-md-4">
                <label class="form-label">@Localizer["AddTitleLabel"]</label>
                <input class="form-control" name="Title" placeholder="@Localizer["AddTitlePlaceholder"]" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">@Localizer["AddKindLabel"]</label>
                <select class="form-select" name="Kind">
                    <option value="Labor">@Localizer["Kind_Labor"]</option>
                    <option value="Part">@Localizer["Kind_Part"]</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">@Localizer["AddQuantityLabel"]</label>
                <input class="form-control" type="number" step="0.01" name="Qty" value="1" min="0.01" />
            </div>
            <div class="col-md-2">
                <label class="form-label">@Localizer["AddPriceLabel"]</label>
                <input class="form-control" type="number" step="0.01" name="Price" value="0" min="0" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-plus-circle me-2"></i>@Localizer["AddButton"]</button>
            </div>
        </form>
    </div>
</div>
