@model Scm.Domain.Entities.Order
@using Scm.Domain.Entities
<div class="card shadow-soft mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-semibold mb-0">Смета</h5>
            <div class="text-end">
                <div class="small text-muted">Итого утверждено</div>
                <div class="fs-4 fw-bold" id="quote-total">@Model.QuoteLines.Where(l => l.Status == QuoteLineStatus.Approved).Sum(l => l.Price * l.Qty).ToString("N2") ₽</div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>Наименование</th>
                        <th class="text-center">Тип</th>
                        <th class="text-end">Кол-во</th>
                        <th class="text-end">Цена</th>
                        <th class="text-end">Сумма</th>
                        <th class="text-end">Статус</th>
                    </tr>
                </thead>
                <tbody id="quote-lines">
                    @foreach (var line in Model.QuoteLines.OrderBy(l => l.Title))
                    {
                        var badge = line.Status switch
                        {
                            QuoteLineStatus.Draft => "secondary",
                            QuoteLineStatus.Proposed => "warning",
                            QuoteLineStatus.Approved => "success",
                            QuoteLineStatus.Rejected => "danger",
                            _ => "secondary"
                        };
                        <tr>
                            <td>@line.Title</td>
                            <td class="text-center">
                                <span class="badge text-bg-light text-dark">@(line.Kind == QuoteLineKind.Labor ? "Работа" : "Запчасть")</span>
                            </td>
                            <td class="text-end">@line.Qty.ToString("N2")</td>
                            <td class="text-end">@line.Price.ToString("N2")</td>
                            <td class="text-end">@(line.Price * line.Qty).ToString("N2")</td>
                            <td class="text-end"><span class="badge text-bg-@badge">@line.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <form id="add-line-form" class="row g-3 border-top pt-3 mt-3">
            <input type="hidden" name="OrderId" value="@Model.Id" />
            <div class="col-md-4">
                <label class="form-label">Наименование</label>
                <input class="form-control" name="Title" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Тип</label>
                <select class="form-select" name="Kind">
                    <option value="Labor">Работа</option>
                    <option value="Part">Запчасть</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Кол-во</label>
                <input class="form-control" type="number" step="0.01" name="Qty" value="1" min="0.01" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Цена</label>
                <input class="form-control" type="number" step="0.01" name="Price" value="0" min="0" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100"><i class="bi bi-plus-circle me-2"></i>Добавить</button>
            </div>
        </form>
    </div>
</div>
