@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@using System.Text.Json
@inject SignInManager<Scm.Infrastructure.Identity.ApplicationUser> SignInManager
@inject UserManager<Scm.Infrastructure.Identity.ApplicationUser> UserManager
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - @Localizer["SiteTitle"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
@{
    bool isAuthenticated = SignInManager.IsSignedIn(User);
    bool canAccessOrders = isAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Technician"));
    bool canAccessStock = isAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Storekeeper"));
    bool canAccessReports = isAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Accountant"));
    bool canAccessCrm = isAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Technician") || User.IsInRole("Support"));
    bool canManageUsers = isAuthenticated && User.IsInRole("Admin");
}
<body class="app-body d-flex flex-column min-vh-100"
      data-toast-status-updated="@Localizer["Toast_StatusUpdated"]"
      data-toast-status-error="@Localizer["Toast_StatusUpdateFailed"]"
      data-table-empty="@Localizer["Table_Empty"]"
      data-param-type-string="@Localizer["ParamType_String"]"
      data-param-type-int="@Localizer["ParamType_Int"]"
      data-param-type-decimal="@Localizer["ParamType_Decimal"]"
      data-param-type-date="@Localizer["ParamType_Date"]"
      data-param-type-bool="@Localizer["ParamType_Bool"]">
    <header class="app-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container-xxl">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon d-inline-flex align-items-center justify-content-center">
                        <i class="bi bi-tools"></i>
                    </span>
                    <span class="fw-semibold">@Localizer["BrandName"]</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="@Localizer["ToggleNavigation"]">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (canAccessOrders)
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">@Localizer["OrdersNav"]</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Kanban">@Localizer["KanbanNav"]</a></li>
                        }
                        @if (canAccessStock)
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Stock" asp-action="Index">@Localizer["StockNav"]</a></li>
                        }
                        @if (canAccessReports)
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Dashboard">@Localizer["ReportsNav"]</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="ReportDefinitions" asp-action="Index">@Localizer["ReportBuilderNav"]</a></li>
                        }
                        @if (canAccessCrm)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="crmDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@Localizer["CrmNav"]</a>
                                <ul class="dropdown-menu" aria-labelledby="crmDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Accounts" asp-action="Index">@Localizer["AccountsNav"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Contacts" asp-action="Index">@Localizer["ContactsNav"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Deals" asp-action="Index">@Localizer["DealsNav"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Tasks" asp-action="Index">@Localizer["TasksNav"]</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Tickets" asp-action="Index">@Localizer["TicketsNav"]</a></li>
                                </ul>
                            </li>
                        }
                        @if (canManageUsers)
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">@Localizer["UsersNav"]</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>@UserManager.GetUserName(User)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Orders", new { area = string.Empty })" method="post" class="px-3 py-2">
                                            <button class="btn btn-outline-danger w-100" type="submit">@Localizer["Logout"]</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderSection("Hero", required: false)
    @RenderSection("Features", required: false)
    @RenderSection("TableSections", required: false)


    <main class="app-main flex-grow-1 py-4">
        <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>
        <div class="container-xxl">
            @RenderBody()
        </div>
    </main>

  

    

    @RenderSection("CTAsection", required: false)

    <footer id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="mb-3">
                    <i class="bi bi-tools me-2"></i>
                        @* <img src="/svg/logo/crm.svg" alt="logo" class="me-1" width="32" height="32" style="vertical-align: -0.425em;"> *@
                        @Localizer["BrandName"]
                    </h5>
                    <p class="text-col multiline-text"> @Localizer["BrandName"].
                                                        Надёжный ремонт и сервис в один клик.
                                                        </p>
                    <div class="social-icons mt-3">
                        <a href="#"><i class="bi bi-telegram"></i></a>
                        <a href="#"><i class="bi bi-telegram"></i></a>
                        <a href="#"><i class="bi bi-telegram"></i></a>
                        <a href="#"><i class="bi bi-telegram"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Быстрые ссылки</h5>
                    <div class="footer-links">
                        <a href="#" class="d-block mb-2">О системе</a>
                        <a href="#" class="d-block mb-2">Тарифы</a>
                        <a href="#" class="d-block mb-2">Интеграции</a>
                        <a href="#" class="d-block mb-2">База знаний</a>
                        <a href="#" class="d-block mb-2">API документация</a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="mb-3">Контакты</h5>
                    <p class="text-col mb-2">
                        <i class="bi bi-telephone me-2"></i> +7 (495) 123-45-67
                    </p>
                    <p class="text-col mb-2">
                        <i class="bi bi-envelope me-2"></i> info@scmservicecenter.ru
                    </p>
                    <p class="text-col mb-2">
                        <i class="bi bi-clock me-2"></i> Пн-Пт: 9:00 - 18:00
                    </p>
                    <p class="text-col">
                        <i class="bi bi-headset me-2"></i> Техподдержка 24/7
                    </p>
                </div>
            </div>
            <hr class="my-4 bg-secondary">
            <div class="text-center">
                <p>&copy; @DateTime.UtcNow.Year @Localizer["BrandName"]. Все права защищены.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.11.2/qs.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function () {
            const success = @Html.Raw(JsonSerializer.Serialize(TempData["Success"] ?? string.Empty));
            const error = @Html.Raw(JsonSerializer.Serialize(TempData["Error"] ?? string.Empty));
            if (success) showToast(success, 'bg-success');
            if (error) showToast(error, 'bg-danger');
        })();
        function showToast(message, cssClass) {
            const container = document.getElementById('toast-container');
            const wrapper = document.createElement('div');
            wrapper.className = `toast align-items-center text-white ${cssClass} shadow`;
            wrapper.setAttribute('role', 'alert');
            wrapper.setAttribute('aria-live', 'assertive');
            wrapper.setAttribute('aria-atomic', 'true');
            wrapper.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Закрыть"></button></div>`;
            container.appendChild(wrapper);
            new bootstrap.Toast(wrapper, { delay: 4000 }).show();
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>

        @* Footer *@
        footer {
            background-color: #1f2937;
            color: white;
            padding: 50px 0 20px;
        }
        
        .text-col{
            color: #9ca3af;
        }

        .multiline-text {
            white-space: pre-line;
        }

        .footer-links a {
            color: #9ca3af;
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .footer-links a:hover {
            color: white;
        }

        .social-icons a {
            width: 40px;
            height: 40px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            margin: 0 5px;
            transition: all 0.3s;
            transform: translateX(-5px);
        }

        .social-icons a:hover {
            background: #7b53a7;
            transform: translateY(-3px);
        }

    </style>

</body>
</html>
