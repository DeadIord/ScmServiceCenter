@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Text.Json
@inject SignInManager<Scm.Infrastructure.Identity.ApplicationUser> SignInManager
@inject UserManager<Scm.Infrastructure.Identity.ApplicationUser> UserManager
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SCM сервис-центр</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header class="border-bottom bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-xxl">
                <a class="navbar-brand fw-bold" asp-controller="Orders" asp-action="Index">SCM сервис-центр</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Переключить навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Index">@Localizer["OrdersNav"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Kanban">@Localizer["KanbanNav"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Stock" asp-action="Index">@Localizer["StockNav"]</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Dashboard">@Localizer["ReportsNav"]</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="crmDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@Localizer["CrmNav"]</a>
                            <ul class="dropdown-menu" aria-labelledby="crmDropdown">
                                <li><a class="dropdown-item" asp-controller="Accounts" asp-action="Index">@Localizer["AccountsNav"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Contacts" asp-action="Index">@Localizer["ContactsNav"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Deals" asp-action="Index">@Localizer["DealsNav"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Tasks" asp-action="Index">@Localizer["TasksNav"]</a></li>
                                <li><a class="dropdown-item" asp-controller="Tickets" asp-action="Index">@Localizer["TicketsNav"]</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>@UserManager.GetUserName(User)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Orders", new { area = string.Empty })" method="post" class="px-3 py-2">
                                            <button class="btn btn-outline-danger w-100" type="submit">Выйти</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Войти</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-xxl py-4">
        <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.11.2/qs.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function () {
            const success = @Html.Raw(JsonSerializer.Serialize(TempData["Success"] ?? string.Empty));
            const error = @Html.Raw(JsonSerializer.Serialize(TempData["Error"] ?? string.Empty));
            if (success) showToast(success, 'bg-success');
            if (error) showToast(error, 'bg-danger');
        })();
        function showToast(message, cssClass) {
            const container = document.getElementById('toast-container');
            const wrapper = document.createElement('div');
            wrapper.className = `toast align-items-center text-white ${cssClass} shadow`;
            wrapper.setAttribute('role', 'alert');
            wrapper.setAttribute('aria-live', 'assertive');
            wrapper.setAttribute('aria-atomic', 'true');
            wrapper.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Закрыть"></button></div>`;
            container.appendChild(wrapper);
            new bootstrap.Toast(wrapper, { delay: 4000 }).show();
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
