@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"].Value;
}

<div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-lg-between gap-3 mb-4">
    <div>
        <h1 class="h3 fw-semibold mb-2">@Localizer["Heading"]</h1>
        <p class="text-muted mb-0">@Localizer["Description"]</p>
    </div>
    <div class="d-flex gap-2">
        <button type="button" class="btn btn-primary" disabled>@Localizer["PrimaryAction"]</button>
        <button type="button" class="btn btn-outline-secondary" disabled>@Localizer["SecondaryAction"]</button>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body text-center py-5">
        <i class="bi bi-diagram-3 display-5 text-muted mb-3"></i>
        <h2 class="h5 fw-semibold mb-2">@Localizer["EmptyTitle"]</h2>
        <p class="text-muted mb-0">@Localizer["EmptyDescription"]</p>
    </div>
</div>
