@model Scm.Web.Models.Tickets.TicketsIndexViewModel
@using System.Linq
@using Microsoft.AspNetCore.Mvc.Localization
@using Scm.Domain.Entities
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Title"].Value;
    var totalCount = Model.Counters.Values.Sum();

    string FormatStatus(TicketStatus in_status)
    {
        return Localizer[$"Status.{in_status}"].Value;
    }

    string StatusBadgeClass(TicketStatus in_status)
    {
        return in_status switch
        {
            TicketStatus.Open => "status-open",
            TicketStatus.Pending => "status-pending",
            TicketStatus.Resolved => "status-resolved",
            TicketStatus.Closed => "status-closed",
            _ => "status-closed"
        };
    }

    string FormatSize(long in_bytes)
    {
        const long kilo = 1024;
        const long mega = kilo * 1024;
        const long giga = mega * 1024;

        if (in_bytes >= giga)
        {
            return string.Format(Localizer["FileSize.Gigabytes"].Value, in_bytes / (double)giga);
        }

        if (in_bytes >= mega)
        {
            return string.Format(Localizer["FileSize.Megabytes"].Value, in_bytes / (double)mega);
        }

        if (in_bytes >= kilo)
        {
            return string.Format(Localizer["FileSize.Kilobytes"].Value, in_bytes / (double)kilo);
        }

        return string.Format(Localizer["FileSize.Bytes"].Value, in_bytes);
    }
}

<link rel="stylesheet" href="~/css/tickets/tickets_index.css" asp-append-version="true" />

<div class="tickets-main-container">
    <div class="tickets-wrapper">
        <div class="tickets-grid">
            <!-- Left Sidebar -->
            <div class="tickets-sidebar">
                <!-- Search Box -->
                <div class="search-box">
                    <form asp-action="Index" asp-route-id="@(Model.SelectedTicket?.Id)" method="get" class="search-form">
                        <input type="search" name="q" value="@Model.SearchTerm" class="search-input" placeholder="@Localizer["SearchPlaceholder"]" />
                        <button type="submit" class="search-btn">@Localizer["SearchAction"]</button>
                        @if (Model.CurrentFilter.HasValue)
                        {
                            <input type="hidden" name="status" value="@Model.CurrentFilter" />
                        }
                    </form>
                </div>

                <!-- Filter Pills -->
                <div class="filter-pills">
                    <a class="filter-pill @(!Model.CurrentFilter.HasValue ? "active" : "")" href="@Url.Action("Index", new { id = Model.SelectedTicket?.Id, q = Model.SearchTerm })">
                        @Localizer["Filter.All"]
                        <span class="filter-pill-badge">@totalCount</span>
                    </a>
                    @foreach (var status in Enum.GetValues<TicketStatus>())
                    {
                        var isActive = Model.CurrentFilter == status;
                        Model.Counters.TryGetValue(status, out var counter);
                        <a class="filter-pill @(isActive ? "active" : "")" href="@Url.Action("Index", new { id = Model.SelectedTicket?.Id, status, q = Model.SearchTerm })">
                            @FormatStatus(status)
                            <span class="filter-pill-badge">@counter</span>
                        </a>
                    }
                </div>

                <!-- Poll Inbox -->
                <div class="poll-inbox-section">
                    <form asp-action="PollInbox" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="poll-inbox-btn">
                            <i class="bi bi-arrow-repeat"></i>
                            Получить письма
                        </button>
                        <div class="poll-inbox-hint">Импорт можно выполнять не чаще одного раза в минуту.</div>
                    </form>
                </div>

                <!-- Tickets List -->
                <div class="tickets-list">
                    @if (!Model.Tickets.Any())
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="bi bi-life-preserver"></i>
                            </div>
                            <p class="empty-state-text">@Localizer["EmptyDescription"]</p>
                        </div>
                    }
                    else
                    {
                        foreach (var ticket in Model.Tickets)
                        {
                            var isActive = Model.SelectedTicket?.Id == ticket.Id;
                            <a class="ticket-item @(isActive ? "active" : "")" href="@Url.Action("Index", new { id = ticket.Id, status = Model.CurrentFilter, q = Model.SearchTerm })">
                                <div class="ticket-header">
                                    <div>
                                        <h6 class="ticket-subject">@ticket.Subject</h6>
                                        <div class="ticket-client">@(string.IsNullOrWhiteSpace(ticket.ClientName) ? ticket.ClientEmail : ticket.ClientName)</div>
                                    </div>
                                    <div class="ticket-meta">
                                        <span class="status-badge @StatusBadgeClass(ticket.Status)">@FormatStatus(ticket.Status)</span>
                                        <div class="ticket-date">@ticket.UpdatedAtLocal.ToString("dd.MM.yyyy HH:mm")</div>
                                    </div>
                                </div>
                                @if (ticket.AwaitingReply)
                                {
                                    <span class="awaiting-badge">@Localizer["AwaitingReply"]</span>
                                }
                            </a>
                        }
                    }
                </div>
            </div>

            <!-- Right Content -->
            <div class="ticket-content">
                @if (TempData["Tickets.Success"] is string successMessage)
                {
                    <div class="alert-modern alert-success" role="alert">
                        @successMessage
                        <button type="button" class="alert-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]">&times;</button>
                    </div>
                }
                @if (TempData["Tickets.Error"] is string errorMessage)
                {
                    <div class="alert-modern alert-danger" role="alert">
                        @errorMessage
                        <button type="button" class="alert-close" data-bs-dismiss="alert" aria-label="@Localizer["Close"]">&times;</button>
                    </div>
                }

                @if (Model.SelectedTicket is null)
                {
                    <div class="empty-detail-state">
                        <i class="bi bi-inboxes empty-detail-icon"></i>
                        <h2 class="empty-detail-title">@Localizer["EmptyTitle"]</h2>
                        <p class="empty-detail-text">@Localizer["EmptyDescription"]</p>
                    </div>
                }
                else
                {
                    <!-- Ticket Header -->
                    <div class="ticket-detail-header">
                        <div class="ticket-detail-top">
                            <div>
                                <h2 class="ticket-detail-title">@Model.SelectedTicket.Subject</h2>
                                <div class="ticket-detail-info">
                                    <i class="bi bi-person"></i>
                                    <span>@(string.IsNullOrWhiteSpace(Model.SelectedTicket.ClientName) ? Model.SelectedTicket.ClientEmail : Model.SelectedTicket.ClientName)</span>
                                    <span>&middot;</span>
                                    <span>@Model.SelectedTicket.CreatedAtLocal.ToString("dd.MM.yyyy HH:mm")</span>
                                </div>
                            </div>
                            <div class="ticket-detail-actions">
                                <span class="status-badge @StatusBadgeClass(Model.SelectedTicket.Status)" style="font-size: 0.875rem; padding: 0.375rem 0.875rem;">
                                    @FormatStatus(Model.SelectedTicket.Status)
                                </span>
                                <form asp-action="UpdateStatus" method="post" class="status-update-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ticketId" value="@Model.SelectedTicket.Id" />
                                    <select name="status" class="status-select">
                                        @foreach (var status in Enum.GetValues<TicketStatus>())
                                        {
                                            <option value="@status" selected="@(status == Model.SelectedTicket.Status)">@FormatStatus(status)</option>
                                        }
                                    </select>
                                    <button type="submit" class="status-update-btn">@Localizer["UpdateStatus"]</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Messages -->
                    @foreach (var message in Model.SelectedTicket.Messages)
                    {
                        <div class="message-card">
                            <div class="message-header">
                                <div class="message-author-section">
                                    <span class="message-type-badge @(message.FromClient ? "client" : "agent")">
                                        @(message.FromClient ? Localizer["Message.Client"] : Localizer["Message.Agent"])
                                    </span>
                                    <div class="message-author">@message.Author</div>
                                </div>
                                <div class="message-date">@message.SentAtLocal.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                            <div class="message-body">@Html.Raw(message.BodyHtml)</div>
                            @if (message.Attachments.Any())
                            {
                                <div class="attachments-section">
                                    <div class="attachments-title">@Localizer["Attachments"]</div>
                                    <div class="attachments-grid">
                                        @foreach (var attachment in message.Attachments)
                                        {
                                            <div class="attachment-card">
                                                @{
                                                    var previewContentType = attachment.ContentType ?? "application/octet-stream";
                                                    var isImage = previewContentType.StartsWith("image/", StringComparison.OrdinalIgnoreCase);
                                                    var isVideo = previewContentType.StartsWith("video/", StringComparison.OrdinalIgnoreCase);
                                                }
                                                @if (attachment.PreviewInline && isImage)
                                                {
                                                    <div class="attachment-preview">
                                                        <a href="@attachment.DownloadUrl" target="_blank" rel="noopener">
                                                            <img src="@attachment.PreviewUrl" alt="@attachment.FileName" />
                                                        </a>
                                                    </div>
                                                }
                                                else if (attachment.PreviewInline && isVideo)
                                                {
                                                    <div class="attachment-preview">
                                                        <video controls>
                                                            <source src="@attachment.PreviewUrl" type="@previewContentType" />
                                                            @Localizer["VideoNotSupported"]
                                                        </video>
                                                    </div>
                                                }
                                                <div class="attachment-name">@attachment.FileName</div>
                                                <div class="attachment-size">@FormatSize(attachment.Length)</div>
                                                <a class="attachment-download" href="@attachment.DownloadUrl">
                                                    <i class="bi bi-download"></i>
                                                    @Localizer["Download"]
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Reply Form -->
                    <div class="reply-card">
                        <h3 class="reply-title">@Localizer["ReplyHeading"]</h3>
                        <form asp-action="Reply" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="TicketId" value="@Model.SelectedTicket!.Reply.TicketId" />
                            <input type="hidden" name="ReplyToExternalId" value="@Model.SelectedTicket!.Reply.ReplyToExternalId" />

                            <div class="form-group">
                                <label for="reply-subject" class="form-label">@Localizer["Subject"]</label>
                                <input id="reply-subject" name="Subject" value="@Model.SelectedTicket!.Reply.Subject" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="reply-body" class="form-label">@Localizer["MessageBody"]</label>
                                <textarea id="reply-body" name="Body" class="form-control">@Model.SelectedTicket!.Reply.Body</textarea>
                            </div>

                            <div class="form-group">
                                <label for="reply-attachments" class="form-label">@Localizer["AddAttachments"]</label>
                                <input id="reply-attachments" name="Attachments" class="form-control" type="file" multiple />
                                <div class="form-text">@Localizer["AttachmentsHint"]</div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send"></i>
                                    @Localizer["SendReply"]
                                </button>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>