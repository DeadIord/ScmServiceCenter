@model Scm.Application.DTOs.ContactInputDto
@{
    ViewData["Title"] = "Новый контакт";
}
<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
        <div class="card shadow-soft p-4">
            <h1 class="section-title mb-3">Создание контакта</h1>
            <form asp-action="Create" method="post" class="d-grid gap-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <partial name="_Form" />
                <div class="text-end">
                    <a class="btn btn-outline-secondary" asp-action="Index">Отмена</a>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
