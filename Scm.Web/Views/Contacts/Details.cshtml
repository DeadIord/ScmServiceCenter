@model Scm.Web.Models.Crm.ContactDetailsViewModel
@{
    ViewData["Title"] = Model.Contact.FullName;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="section-title mb-0">@Model.Contact.FullName</h1>
        @if (Model.Contact.Account is not null)
        {
            <div class="text-muted">Контрагент: <a class="text-decoration-none" asp-controller="Accounts" asp-action="Details" asp-route-id="@Model.Contact.AccountId">@Model.Contact.Account.Name</a></div>
        }
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left me-2"></i>К списку</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Contact.Id"><i class="bi bi-pencil me-2"></i>Редактировать</a>
    </div>
</div>
<div class="card shadow-soft p-4">
    <dl class="row mb-0">
        <dt class="col-4">Должность</dt>
        <dd class="col-8">@Model.Contact.Position</dd>
        <dt class="col-4">Телефон</dt>
        <dd class="col-8"><a class="text-decoration-none" href="tel:@Model.Contact.Phone">@Model.Contact.Phone</a></dd>
        <dt class="col-4">Email</dt>
        <dd class="col-8"><a class="text-decoration-none" href="mailto:@Model.Contact.Email">@Model.Contact.Email</a></dd>
    </dl>
</div>
