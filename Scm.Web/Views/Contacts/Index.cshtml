@model Scm.Web.Models.Crm.ContactIndexViewModel
@{
    ViewData["Title"] = "Контакты";
}

<link rel="stylesheet" href="~/css/contacts/contacts_index.css" asp-append-version="true" />

<div class="main-body">
    <div class="contacts-container">
        <!-- Header -->
        <div class="contacts-header">
            <div class="header-title-section">
                <div class="header-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="header-text">
                    <h1>Контакты</h1>
                    <p>Управление контактными лицами</p>
                </div>
            </div>
            <div class="header-actions">
                <a class="btn btn-primary" asp-action="Create">
                    <i class="bi bi-plus-lg"></i>
                    Добавить контакт
                </a>
            </div>
        </div>

        <!-- Filter Card -->
        <div class="filter-card">
            <h2 class="filter-title">
                <i class="bi bi-funnel"></i>
                Фильтры и поиск
            </h2>
            <form class="filter-form" method="get">
                <div class="filter-group">
                    <label class="filter-label">Контрагент</label>
                    <select class="form-select" name="accountId">
                        <option value="">Все контрагенты</option>
                        @foreach (var account in Model.Accounts)
                        {
                            <option value="@account.Id" selected="@(Model.AccountId == account.Id ? "selected" : null)">@account.Name</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Поиск</label>
                    <input class="form-control" type="search" name="q" value="@Model.Query" placeholder="Имя, телефон или email" />
                </div>
                <div class="filter-group">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i>
                        Найти
                    </button>
                </div>
            </form>
        </div>

        <!-- Table Card -->
        <div class="contacts-table-card">
            @if (!Model.Contacts.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-person-x"></i>
                    </div>
                    <h3 class="empty-state-title">Контакты не найдены</h3>
                    <p class="empty-state-text">
                        @if (!string.IsNullOrEmpty(Model.Query) || Model.AccountId.HasValue)
                        {
                            <text>Попробуйте изменить условия поиска</text>
                        }
                        else
                        {
                            <text>Добавьте первый контакт для начала работы</text>
                        }
                    </p>
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="bi bi-plus-lg"></i>
                        Добавить контакт
                    </a>
                </div>
            }
            else
            {
                <div class="table-wrapper">
                    <table class="contacts-table">
                        <thead>
                            <tr>
                                <th>Контакт</th>
                                <th>Контрагент</th>
                                <th>Телефон</th>
                                <th>Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model.Contacts)
                            {
                                var initials = string.Join("", contact.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries).Take(2).Select(w => w[0])).ToUpper();
                                <tr>
                                    <td>
                                        <div class="contact-name-cell">
                                            <div class="contact-avatar">@initials</div>
                                            <div class="contact-info">
                                                <div class="contact-name">@contact.FullName</div>
                                                @if (!string.IsNullOrEmpty(contact.Position))
                                                {
                                                    <div class="contact-position">@contact.Position</div>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (contact.Account is not null)
                                        {
                                            <a class="account-badge" asp-controller="Accounts" asp-action="Details" asp-route-id="@contact.AccountId">
                                                <i class="bi bi-building"></i>
                                                @contact.Account.Name
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(contact.Phone))
                                        {
                                            <a class="contact-link" href="tel:@contact.Phone">
                                                <i class="bi bi-telephone"></i>
                                                @contact.Phone
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(contact.Email))
                                        {
                                            <a class="contact-link" href="mailto:@contact.Email">
                                                <i class="bi bi-envelope"></i>
                                                @contact.Email
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a class="btn-icon" asp-action="Details" asp-route-id="@contact.Id" title="Просмотр">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
