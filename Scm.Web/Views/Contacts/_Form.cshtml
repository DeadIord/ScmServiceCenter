@using Microsoft.AspNetCore.Mvc.Rendering
@model Scm.Application.DTOs.ContactInputDto
@{
    var accounts = ViewBag.Accounts as List<SelectListItem> ?? new();
}
<div class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Контрагент</label>
        <select class="form-select" asp-for="AccountId" asp-items="accounts"></select>
        <span class="text-danger" asp-validation-for="AccountId"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Должность</label>
        <input class="form-control" asp-for="Position" />
        <span class="text-danger" asp-validation-for="Position"></span>
    </div>
    <div class="col-12">
        <label class="form-label">Полное имя</label>
        <input class="form-control" asp-for="FullName" />
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Телефон</label>
        <input class="form-control" asp-for="Phone" inputmode="numeric" pattern="[0-9]{11}" maxlength="11" placeholder="11 цифр" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
</div>
