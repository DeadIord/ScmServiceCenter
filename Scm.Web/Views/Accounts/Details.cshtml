@model Scm.Web.Models.Crm.AccountDetailsViewModel
@{
    ViewData["Title"] = Model.Account.Name;
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="section-title mb-0">@Model.Account.Name</h1>
        <div class="text-muted">@(Model.Account.Type == Scm.Domain.Entities.AccountType.Company ? "Компания" : "Физлицо")</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left me-2"></i>К списку</a>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Account.Id"><i class="bi bi-pencil me-2"></i>Редактировать</a>
    </div>
</div>
<div class="row g-4">
    <div class="col-lg-4">
        <div class="card shadow-sm rounded-3 p-4">
            <dl class="row mb-0">
                <dt class="col-5">ИНН</dt>
                <dd class="col-7">@Model.Account.Inn</dd>
                <dt class="col-5">Адрес</dt>
                <dd class="col-7">@Model.Account.Address</dd>
                <dt class="col-5">Теги</dt>
                <dd class="col-7">@Model.Account.Tags</dd>
                <dt class="col-5">Менеджер</dt>
                <dd class="col-7">@Model.Account.ManagerUserId</dd>
            </dl>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h5 mb-0">Контакты</h2>
            <a class="btn btn-sm btn-primary" asp-controller="Contacts" asp-action="Create" asp-route-accountId="@Model.Account.Id"><i class="bi bi-plus-lg me-1"></i>Добавить контакт</a>
        </div>
        <div class="card shadow-sm rounded-3">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-sticky mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Имя</th>
                            <th>Должность</th>
                            <th>Телефон</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Contacts.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 table-empty">Записей нет</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var contact in Model.Contacts)
                            {
                                <tr>
                                    <td>@contact.FullName</td>
                                    <td>@contact.Position</td>
                                    <td><a class="text-decoration-none" href="tel:@contact.Phone">@contact.Phone</a></td>
                                    <td><a class="text-decoration-none" href="mailto:@contact.Email">@contact.Email</a></td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-primary" asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.Id"><i class="bi bi-eye"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
