@model Scm.Web.Models.Crm.AccountIndexViewModel
@{
    ViewData["Title"] = "Контрагенты";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0">Контрагенты</h1>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-lg me-2"></i>Добавить</a>
</div>
<div class="card shadow-soft p-4 mb-4">
    <form class="row g-3" method="get">
        <div class="col-md-6">
            <label class="form-label">Поиск</label>
            <input class="form-control" type="search" name="q" value="@Model.Query" placeholder="Название или ИНН" />
        </div>
        <div class="col-md-6 align-self-end text-end">
            <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search me-2"></i>Найти</button>
        </div>
    </form>
</div>
@if (Model.Accounts.Count == 0)
{
    <div class="alert alert-light border">Контрагенты не найдены.</div>
}
else
{
    <div class="card shadow-soft">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Название</th>
                        <th>Тип</th>
                        <th>ИНН</th>
                        <th>Теги</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td>
                                <a class="text-decoration-none" asp-action="Details" asp-route-id="@account.Id">@account.Name</a>
                            </td>
                            <td>@(account.Type == Scm.Domain.Entities.AccountType.Company ? "Компания" : "Физлицо")</td>
                            <td>@account.Inn</td>
                            <td>@account.Tags</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@account.Id"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
