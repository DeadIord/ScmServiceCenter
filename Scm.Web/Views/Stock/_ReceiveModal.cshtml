@model ReceivePartDto
<div class="modal fade" id="receiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <form asp-action="Receive" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header border-0">
                    <h5 class="modal-title">Приход товара</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Sku" class="form-label">SKU</label>
                        <input asp-for="Sku" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Наименование</label>
                        <input asp-for="Title" class="form-control" required />
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Qty" class="form-label">Количество</label>
                            <input asp-for="Qty" class="form-control" type="number" step="1" min="1" required />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Unit" class="form-label">Ед. изм.</label>
                            <input asp-for="Unit" class="form-control" required />
                        </div>
                    </div>
                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label asp-for="PriceIn" class="form-label">Цена закуп.</label>
                            <input asp-for="PriceIn" class="form-control" type="number" step="0.01" min="0" required />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PriceOut" class="form-label">Цена розн.</label>
                            <input asp-for="PriceOut" class="form-control" type="number" step="0.01" min="0" required />
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>
