@using Microsoft.AspNetCore.Mvc.Localization
@model Scm.Web.Areas.Admin.Models.UserListViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"].Value;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">@Localizer["Heading"]</h1>
    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i>@Localizer["Action_Create"]
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Localizer["Column_DisplayName"]</th>
                        <th>@Localizer["Column_UserName"]</th>
                        <th>@Localizer["Column_Email"]</th>
                        <th>@Localizer["Column_Phone"]</th>
                        <th>@Localizer["Column_Roles"]</th>
                        <th class="text-center">@Localizer["Column_Status"]</th>
                        <th class="text-end">@Localizer["Column_Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Users.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">@Localizer["Empty"]</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@(string.IsNullOrWhiteSpace(user.DisplayName) ? Localizer["DisplayName_Fallback"].Value : user.DisplayName)</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @if (user.Roles.Count == 0)
                                    {
                                        <span class="badge bg-secondary">@Localizer["NoRoles"]</span>
                                    }
                                    else
                                    {
                                        foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-info text-dark me-1">@role</span>
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    <form asp-area="Admin" asp-controller="Users" asp-action="UpdateStatus" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@user.Id" />
                                        @if (user.IsActive)
                                        {
                                            <input type="hidden" name="isActive" value="false" />
                                            <span class="badge bg-success me-2">@Localizer["Status_Active"]</span>
                                            <button type="submit" class="btn btn-sm btn-outline-danger">@Localizer["Action_Deactivate"]</button>
                                        }
                                        else
                                        {
                                            <input type="hidden" name="isActive" value="true" />
                                            <span class="badge bg-danger me-2">@Localizer["Status_Blocked"]</span>
                                            <button type="submit" class="btn btn-sm btn-outline-success">@Localizer["Action_Activate"]</button>
                                        }
                                    </form>
                                </td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Users" asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-key"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
