@using Microsoft.AspNetCore.Mvc.Localization
@model Scm.Web.Areas.Admin.Models.UserEditViewModel
@inject IViewLocalizer Localizer

<div class="row g-3">
    <div class="col-md-6">
        <div class="form-floating">
            <input asp-for="DisplayName" class="form-control" />
            <label asp-for="DisplayName"></label>
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating">
            <input asp-for="UserName" class="form-control" />
            <label asp-for="UserName"></label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating">
            <input asp-for="Email" class="form-control" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating">
            <input asp-for="PhoneNumber" class="form-control" />
            <label asp-for="PhoneNumber"></label>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12">
        <div class="form-check form-switch">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
    </div>
</div>

<div class="mt-4">
    <h5 class="mb-3">@Localizer["RolesHeading"]</h5>
    <div class="row g-3">
        @for (var i = 0; i < Model.Roles.Count; i++)
        {
            var role = Model.Roles[i];
            <div class="col-md-4">
                <div class="form-check">
                    <input type="hidden" name="Roles[@i].Selected" value="false" />
                    <input class="form-check-input" type="checkbox" name="Roles[@i].Selected" value="true" @(role.Selected ? "checked" : string.Empty) id="role_@role.RoleId">
                    <input type="hidden" name="Roles[@i].RoleId" value="@role.RoleId" />
                    <input type="hidden" name="Roles[@i].RoleName" value="@role.RoleName" />
                    <label class="form-check-label" for="role_@role.RoleId">@role.RoleName</label>
                </div>
            </div>
        }
        @if (!Model.Roles.Any())
        {
            <div class="col-12">
                <div class="alert alert-warning mb-0">@Localizer["RolesEmpty"]</div>
            </div>
        }
    </div>
</div>
