@using Microsoft.AspNetCore.Mvc.Localization
@model Scm.Web.Areas.Admin.Models.UserEditViewModel
@inject IViewLocalizer Localizer

<div class="row g-4">
    <div class="col-md-6">
        <label asp-for="DisplayName" class="form-label"></label>
        <input asp-for="DisplayName" class="form-control" placeholder="@Localizer["DisplayNamePlaceholder"]" />
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" placeholder="@Localizer["UserNamePlaceholder"]" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="@Localizer["EmailPlaceholder"]" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["PhonePlaceholder"]" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="col-12">
        <div class="card bg-light border-0">
            <div class="card-body p-3 d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h2 class="h6 mb-1">@Localizer["StatusHeading"]</h2>
                    <p class="mb-0 text-body-secondary">@Localizer["StatusDescription"]</p>
                </div>
                <div class="form-check form-switch mb-0">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card border-0 bg-light">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                    <div>
                        <h2 class="h6 mb-1">@Localizer["RolesHeading"]</h2>
                        <p class="mb-0 text-body-secondary">@Localizer["RolesDescription"]</p>
                    </div>
                </div>
                <div class="row g-2 mt-3">
                    @for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        var role = Model.Roles[i];
                        <div class="col-sm-6 col-lg-4">
                            <div class="form-check">
                                <input type="hidden" name="Roles[@i].Selected" value="false" />
                                <input class="form-check-input" type="checkbox" name="Roles[@i].Selected" value="true" @(role.Selected ? "checked" : string.Empty) id="role_@role.RoleId">
                                <input type="hidden" name="Roles[@i].RoleId" value="@role.RoleId" />
                                <input type="hidden" name="Roles[@i].RoleName" value="@role.RoleName" />
                                <label class="form-check-label" for="role_@role.RoleId">@role.RoleName</label>
                            </div>
                        </div>
                    }
                    @if (!Model.Roles.Any())
                    {
                        <div class="col-12">
                            <div class="alert alert-warning mb-0">@Localizer["RolesEmpty"]</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
