@model UserEditViewModel
@{
    ViewData["Title"] = Localizer["Title"].Value;
}
<div class="row g-4 justify-content-center">
    <div class="col-xl-8 col-xxl-6">
        <div class="card p-4 mb-4">
            <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 align-items-lg-center">
                <div>
                    <h1 class="section-title mb-1">@Localizer["SectionTitle"]</h1>
                    <p class="section-subtitle mb-0">@Localizer["SectionSubtitle"]</p>
                </div>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left me-2"></i>@Localizer["BackToList"]</a>
            </div>
        </div>
        <div class="card p-4">
            <form asp-action="Edit" method="post" class="row g-4">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="col-12">
                    <label class="form-label" for="DisplayName">@Localizer["DisplayNameLabel"]</label>
                    <input class="form-control" asp-for="DisplayName" placeholder="@Localizer["DisplayNamePlaceholder"]" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label" for="Email">@Localizer["EmailLabel"]</label>
                    <input class="form-control" asp-for="Email" type="email" placeholder="@Localizer["EmailPlaceholder"]" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label" for="PhoneNumber">@Localizer["PhoneLabel"]</label>
                    <input class="form-control" asp-for="PhoneNumber" placeholder="@Localizer["PhonePlaceholder"]" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <h2 class="h6 fw-semibold mb-3">@Localizer["RolesSection"]</h2>
                    <div class="d-flex flex-wrap gap-3">
                        @for (var i = 0; i < Model.Roles.Count; i++)
                        {
                            var role = Model.Roles[i];
                            var roleId = $"edit_role_{i}";
                            <div class="form-check form-switch">
                                <input class="form-check-input" asp-for="Roles[i].Selected" id="@roleId" />
                                <label class="form-check-label" for="@roleId">@role.Name</label>
                                <input type="hidden" asp-for="Roles[i].Name" />
                            </div>
                        }
                    </div>
                </div>
                <div class="col-12 text-end">
                    <a class="btn btn-outline-secondary" asp-action="Index">@Localizer["Cancel"]</a>
                    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
