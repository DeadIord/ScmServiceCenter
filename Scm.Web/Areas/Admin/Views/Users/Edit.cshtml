@using Microsoft.AspNetCore.Mvc.Localization
@model Scm.Web.Areas.Admin.Models.UserEditViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"].Value;
}

<h1 class="h3 mb-4">@Localizer["Heading"]</h1>

<form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="card-body p-4">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <partial name="_UserForm" model="Model" />
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-link text-decoration-none">@Localizer["Action_Cancel"]</a>
        <button type="submit" class="btn btn-primary">@Localizer["Action_Save"]</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
