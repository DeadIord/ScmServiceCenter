@using Microsoft.AspNetCore.Mvc.Localization
@model Scm.Web.Areas.Admin.Models.UserResetPasswordViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"].Value;
}

<div class="row g-4 justify-content-center">
    <div class="col-xl-10 col-xxl-8">
        <div class="card p-4 mb-4">
            <div class="d-flex flex-column flex-lg-row justify-content-between gap-3 align-items-lg-center">
                <div>
                    <h1 class="section-title mb-1">@Localizer["SectionTitle"]</h1>
                    <p class="section-subtitle mb-0">@Localizer["SectionSubtitle"]</p>
                </div>
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>@Localizer["BackToList"]
                </a>
            </div>
        </div>
        <div class="card p-4">
            <form asp-area="Admin" asp-controller="Users" asp-action="ResetPassword" method="post" class="row g-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                </div>
                <div class="col-12">
                    <div class="alert alert-info d-flex flex-column flex-lg-row align-items-lg-center gap-3 mb-0">
                        <div class="flex-grow-1">
                            <h2 class="h6 mb-1">@Localizer["User"]</h2>
                            <p class="mb-0">@Model.DisplayName</p>
                        </div>
                        <p class="mb-0 text-body-secondary">@Localizer["PasswordHint"]</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="@Localizer["PasswordPlaceholder"]" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["ConfirmPasswordPlaceholder"]" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-12 d-flex justify-content-end gap-2 mt-2">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">@Localizer["Action_Cancel"]</a>
                    <button type="submit" class="btn btn-warning">@Localizer["Action_Reset"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
