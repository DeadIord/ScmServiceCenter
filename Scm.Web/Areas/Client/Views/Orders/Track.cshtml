@using System.Globalization
@using System.Linq
@using Scm.Domain.Entities
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model Scm.Web.Areas.Client.Models.ClientOrderViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Localizer["PageTitle"];
    Func<OrderStatus, string> statusBadge = in_status => in_status switch
    {
        OrderStatus.Received => "secondary",
        OrderStatus.Diagnosing => "info",
        OrderStatus.WaitingApproval => "warning",
        OrderStatus.InRepair => "primary",
        OrderStatus.Ready => "success",
        OrderStatus.Closed => "dark",
        _ => "secondary"
    };
    Func<OrderStatus, string> statusTitle = in_status =>
    {
        var localized = Localizer[$"Status_{in_status}"];
        return localized.ResourceNotFound ? in_status.ToString() : localized.Value;
    };
    Func<QuoteLineKind, string> quoteKindTitle = in_kind =>
    {
        var localized = Localizer[$"QuoteLineKind_{in_kind}"];
        return localized.ResourceNotFound ? in_kind.ToString() : localized.Value;
    };
}
<div class="row justify-content-center mb-4">
    <div class="col-lg-8">
        <div class="card shadow-sm rounded-3 p-4">
            <h1 class="section-title mb-3">@Localizer["Heading_ClientPortal"]</h1>
            <p class="text-muted">@Localizer["Description_ClientPortal"]</p>
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label" for="number">@Localizer["Label_OrderNumber"]</label>
                    <input class="form-control" id="number" name="number" value="@ViewBag.Number" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="token">@Localizer["Label_AccessToken"]</label>
                    <input class="form-control" id="token" name="token" value="@ViewBag.Token" required />
                </div>
                <div class="col-12 text-end">
                    <button class="btn btn-primary" type="submit">@Localizer["Action_Show"]</button>
                </div>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3 mb-0">@ViewBag.Error</div>
            }
            @if (TempData["Success"] is string successMessage)
            {
                <div class="alert alert-success mt-3 mb-0">@successMessage</div>
            }
            @if (TempData["Error"] is string errorMessage)
            {
                <div class="alert alert-danger mt-3 mb-0">@errorMessage</div>
            }
        </div>
    </div>
</div>
@if (Model.Order is not null)
{
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-3 p-4">
                <h2 class="fs-3 fw-semibold">@Localizer["Heading_Status"]</h2>
                <p class="text-muted">
                    @Localizer["Text_CurrentStatus"]
                    <span class="badge text-bg-@statusBadge(Model.Order.Status) badge-status">@statusTitle(Model.Order.Status)</span>
                </p>
                <h3 class="fs-4 fw-semibold mt-4">@Localizer["Heading_Estimate"]</h3>
                <form asp-area="Client" asp-controller="Quote" asp-action="Submit" method="post" class="mt-3">
                    <input type="hidden" name="in_orderId" value="@Model.Order.Id" />
                    <input type="hidden" name="in_token" value="@Model.Order.ClientAccessToken" />
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-sticky mb-0">
                            <thead>
                                <tr>
                                    <th>@Localizer["Quote_Header_Title"]</th>
                                    <th class="text-end">@Localizer["Quote_Header_Qty"]</th>
                                    <th class="text-end">@Localizer["Quote_Header_Price"]</th>
                                    <th class="text-end">@Localizer["Quote_Header_Approve"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.QuoteLines.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 table-empty">@Localizer["Quote_TableEmpty"]</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var line in Model.QuoteLines)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@line.Title</div>
                                                <div class="small text-muted">@quoteKindTitle(line.Kind)</div>
                                            </td>
                                            <td class="text-end">@line.Qty.ToString("N2", CultureInfo.CurrentCulture)</td>
                                            <td class="text-end">@line.Price.ToString("C", CultureInfo.CurrentCulture)</td>
                                            <td class="text-end">
                                                <div class="form-check form-switch d-inline-flex align-items-center justify-content-end gap-2">
                                                    <input class="form-check-input" type="checkbox" id="line-@line.Id" name="in_approvedLineIds" value="@line.Id" checked />
                                                    <label class="form-check-label" for="line-@line.Id">@Localizer["Quote_ApproveYes"]</label>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    @if (Model.QuoteLines.Any())
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            @Localizer["Quote_HelpText"]
                        </div>
                        <div class="text-end">
                            <button class="btn btn-success" type="submit">@Localizer["Quote_Submit"]</button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @Localizer["Quote_AllReviewed"]
                        </div>
                    }
                </form>
                <h3 class="fs-4 fw-semibold mt-4">@Localizer["Heading_Communication"]</h3>
                <div class="card shadow-sm rounded-3 mb-3">
                    <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                        @foreach (var message in Model.Messages.OrderByDescending(m => m.AtUtc))
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <div class="fw-semibold">@(message.FromClient ? Localizer["Message_FromClient"] : Localizer["Message_FromService"])</div>
                                    <small class="text-muted">@message.AtUtc.ToLocalTime().ToString("g", CultureInfo.CurrentCulture)</small>
                                </div>
                                <div>@message.Text</div>
                            </div>
                        }
                    </div>
                </div>
                <form asp-action="PostMessage" method="post" class="row g-3">
                    <input type="hidden" name="OrderId" value="@Model.Order.Id" />
                    <input type="hidden" name="number" value="@Model.Order.Number" />
                    <input type="hidden" name="token" value="@Model.Order.ClientAccessToken" />
                    <div class="col-12">
                        <label class="form-label" for="comment">@Localizer["Form_CommentLabel"]</label>
                        <textarea class="form-control" id="comment" name="Text" rows="3" required></textarea>
                    </div>
                    <div class="col-12 text-end">
                        <button class="btn btn-primary" type="submit">@Localizer["Form_Send"]</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm rounded-3 p-4">
                <h3 class="fs-4 fw-semibold mb-3">@Localizer["Heading_FinalStep"]</h3>
                <p class="text-muted">@Localizer["Summary_Description"]</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Localizer["Summary_OrderNumber"]: <span class="fw-semibold">@Model.Order.Number</span></li>
                    <li class="list-group-item">@Localizer["Summary_Device"]: <span class="fw-semibold">@Model.Order.Device</span></li>
                    <li class="list-group-item">@Localizer["Summary_Client"]: <span class="fw-semibold">@Model.Order.ClientName</span></li>
                    <li class="list-group-item">@Localizer["Summary_Phone"]: <a href="tel:@Model.Order.ClientPhone">@Model.Order.ClientPhone</a></li>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.ClientEmail))
                    {
                        <li class="list-group-item">@Localizer["Summary_Email"]: <a href="mailto:@Model.Order.ClientEmail">@Model.Order.ClientEmail</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
}
